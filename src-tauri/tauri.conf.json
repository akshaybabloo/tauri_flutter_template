{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-flutter-template",
  "version": "0.1.0",
  "identifier": "com.gollahalli.tauri-flutter-template",
  "build": {
    "beforeDevCommand": "flutter run -d web-server --web-port 5000",
    "devUrl": "http://localhost:5000",
    "beforeBuildCommand": "flutter build web",
    "frontendDist": "../build/web"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "tauri-flutter-template",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
